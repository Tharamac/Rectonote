    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="fontFamily">@font/josefin_sans_bold</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="fontFamily">@font/josefin_sans_bold</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">10pt</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="rectoNoteTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="rectoNoteTheme.searchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12pt</item>
    </style>

    <style name="rectoNoteTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="rectoNoteTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
